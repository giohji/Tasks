<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tasks_edit_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	>
	<Button
		android:id="@+id/tasks_edit_button_close"
		android:text="Close"
		android:layout_alignParentRight="true"
		android:layout_marginRight="28dip"
		android:layout_marginTop="4dip"
		android:layout_width="60dip"
		android:layout_height="48dip"
	/>
	<RelativeLayout
		android:id="@+id/task_layout"
		android:layout_width="404dip"
		android:layout_height="400dip"
		android:background="@android:color/white"
		android:layout_below="@id/tasks_edit_button_close"
		android:layout_centerHorizontal="true"
		android:gravity="center"
	>
		<CheckBox 
			android:layout_height="wrap_content"
			android:id="@+id/statusCheckBox"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_width="wrap_content"
		/>
		<EditText
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/statusCheckBox"
			android:id="@+id/titleTextBox"
			android:layout_width="fill_parent"
		/>
		<DatePicker
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="date"
			android:id="@+id/datePicker"
			android:layout_below="@id/statusCheckBox"
		/>
		<ImageButton
			android:layout_height="wrap_content"
			android:id="@+id/dateButton"
			android:layout_width="wrap_content"
			android:src="@android:drawable/button_onoff_indicator_on"
			android:layout_below="@id/titleTextBox"
			android:layout_toRightOf="@id/datePicker"
			android:layout_alignParentRight="true"
			android:layout_alignTop="@id/datePicker"
			android:layout_alignBottom="@id/datePicker"
		/>
		<EditText 
			android:layout_height="180dip"
			android:id="@+id/noteTextBox"
			android:inputType="textMultiLine"
			android:layout_width="match_parent"
			android:layout_below="@id/datePicker"
			android:gravity="top|left"
		/>
		<Button
			android:layout_height="wrap_content"
			android:layout_below="@id/noteTextBox"
			android:id="@+id/deleteButton"
			android:text="Delete"
			android:layout_width="wrap_content"
			android:layout_alignRight="@id/noteTextBox"
		/>
		<Button
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@id/deleteButton"
			android:id="@+id/saveButton"
			android:text="Save"
			android:layout_width="wrap_content"
			android:layout_alignTop="@id/deleteButton"
			android:layout_alignBottom="@id/deleteButton" 
		/>
	</RelativeLayout>
</RelativeLayout>
