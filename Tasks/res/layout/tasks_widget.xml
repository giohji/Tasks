<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:rlv="http://schemas.android.com/apk/res/com.compal.mylifestyle"
	android:orientation="vertical"
	android:layout_width="240dip"
	android:layout_height="400dip"
	android:id="@+id/tasks_quickpick_2x2"
	android:paddingLeft="17dip"
	android:paddingTop="23dip"
	>
		<LinearLayout android:layout_height="30dip" android:layout_width="224dip" android:clipChildren="true">
			<Button android:text="Refresh" android:id="@+id/refreshButton" android:textSize="10sp" android:layout_width="75dip" android:layout_height="match_parent"></Button>
			<Button android:text="Clear" android:id="@+id/clearButton" android:textSize="10sp" android:layout_width="75dip" android:layout_height="match_parent"></Button>
			<Button android:text="New" android:id="@+id/newButton" android:textSize="10sp" android:layout_width="75dip" android:layout_height="match_parent"></Button>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="224dip"
			android:layout_height="272dip"
			android:id="@+id/tasks_quickpick_2x2"
			android:background="@drawable/widget_background"
			android:paddingLeft="10dip"
			android:paddingTop="10dip"
			android:orientation="vertical">
	        <RelativeLayout android:layout_height="51dip" android:layout_width="206dip" android:clipChildren="true">
	            <ImageButton android:layout_alignParentLeft="true" android:id="@+id/checkbox1" android:layout_height="match_parent" android:layout_width="wrap_content" android:gravity="center" android:src="@drawable/checkbox_off" android:background="@android:color/transparent"></ImageButton>
	            <TextView android:id="@+id/title1" android:text="TextView" android:textColor="#000000" android:layout_alignParentTop="true" android:textSize="14sp" android:layout_toRightOf="@id/checkbox1" android:layout_height="20sp" android:paddingTop="2sp" android:layout_width="wrap_content"></TextView>
	            <TextView android:id="@+id/notes1" android:text="TextView" android:textColor="#666666" android:layout_below="@id/title1" android:textSize="10sp" android:layout_toRightOf="@id/checkbox1" android:layout_height="14sp" android:layout_width="wrap_content"></TextView>
	            <TextView android:id="@+id/date1" android:text="TextView" android:textColor="#666666" android:layout_below="@id/notes1" android:textSize="10sp" android:layout_toRightOf="@id/checkbox1" android:layout_height="14sp" android:layout_width="wrap_content"></TextView>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="51dip" android:layout_width="206dip" android:clipChildren="true">
	            <ImageButton android:layout_alignParentLeft="true" android:id="@+id/checkbox2" android:layout_height="match_parent" android:layout_width="wrap_content" android:gravity="center" android:src="@drawable/checkbox_off" android:background="@android:color/transparent"></ImageButton>
